<Say::Hint @type="sectioned" as |hint|>
  <hint.header @closeHint={{action 'closeHints'}}>
    U kan hier deze sjablonen invoegen
  </hint.header>
  <hint.list as |list|>
    {{#each templates as |template|}}
      <list.item @execute={{action "insert" template}} @actionLabel="Voeg in" >
      	{{template.title}}
      </list.item>
    {{/each}}
  </hint.list>
</Say::Hint>
