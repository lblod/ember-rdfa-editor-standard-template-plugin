<TemplateProvider @controller={{@controller}} as |provider|>
  {{#if provider.hasApplicableTemplates}}
  <AuList @divider={{true}}>
    {{#each provider.applicableTemplates as |template|}}
      <AuList::Item>
        <AuButton
          @skin="link"
          @icon="add"
          @iconAlignment="left"
          {{on "click" (fn provider.insert template)}}
        >
          {{template.title}}
        </AuButton>
      </AuList::Item>
    {{/each}}
  </AuList>
  {{/if}}
</TemplateProvider>