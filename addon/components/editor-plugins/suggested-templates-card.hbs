<div class="say-card__header">
  <div class="grid">
    <div class="col--10-12">
      <p>
        <strong>U kan hier deze sjablonen invoegen</strong>
      </p>
    </div>
    <div class="col--2-12 u-align-right">
      <a class="link--icon--close" href="#" {{on "click" this.closeHints}} role="button">
        <span class="u-visually-hidden">Venster sluiten</span>
      </a>
    </div>
  </div>
</div>
<div class="say-card__content">
  <ul class="link-list link-list--bordered">
    {{#each this.templates as |template|}}
      <li class="link-list__item link-list__item--sidenotes">
        <a role="button" class="" {{on "click" (fn this.insert template)}}>
          {{template.title}}
        </a>  
      </li>
    {{/each}}
  </ul>
</div>
